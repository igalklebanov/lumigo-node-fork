{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es5",
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "baseUrl": "src",
  "include": ["./src/**/*"],
  "exclude": ["**/*.test.js", "**/*.test.ts", "__mocks__", "./testUtils"]
}

